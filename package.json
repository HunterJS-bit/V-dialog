{
  "name": "v-dialog",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/v-dialog.umd.cjs",
  "module": "./dist/v-dialog.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/v-dialog.js",
      "require": "./dist/v-dialog.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "build:types": "vue-tsc --project ./lib/types.ts --declaration --emitDeclarationOnly --outDir ./dist/main.d.ts ",
    "typecheck": "vue-tsc --project tsconfig.build-types.json --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "dialog-polyfill": "^0.5.6",
    "vue": "^3.2.41"
  },
  "devDependencies": {
    "@testing-library/vue": "^6.4.2",
    "@types/babel__core": "^7.1.20",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.9",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/test-utils": "^2.2.6",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.6.4",
    "vite": "^3.2.3",
    "vite-plugin-vue-type-imports": "^0.2.4",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-tsc": "^1.0.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}